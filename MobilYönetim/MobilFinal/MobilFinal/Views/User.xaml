<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobilFinal.Views.User">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Sube Kodu"/>
            <Entry x:Name="S_kod" Placeholder="Sube Kodu"/>

            <Label Text="Adı"/>
            <Entry x:Name="User_ad" Placeholder="Adı"/>
            
            <Label Text="Soyadı"/>
            <Entry x:Name="User_Soyad" Placeholder="Soyadı"/>

            <Label Text="Kullanıcı Adı"/>
            <Entry x:Name="User_Kad" Placeholder="Kullanıcı Adı"/>

            <Label Text="Şifre"/>
            <Entry x:Name="User_Password" Placeholder="Sifre"/>
                   
            <Label Text="Ünvanı Giriniz"/>
            <Entry x:Name="User_Unvan" Placeholder="Ünvan"/>

            <Button x:Name="Btn_user"  Clicked="Add_User" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>